<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TopPlayerFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:orientation="vertical">
    <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/playerNumbers"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/arial_rounded"
                android:text="0 players"
                android:textSize="22dp" />

            <Spinner
                android:id="@+id/sort"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layoutDirection="rtl"
                android:background="@drawable/ic_baseline_sort_24" />

        </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/topPlayerRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>
    </LinearLayout>
</FrameLayout>