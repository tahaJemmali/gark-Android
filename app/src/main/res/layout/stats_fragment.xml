<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PlayerProfileActvity">
    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        android:layout_margin="5dp"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:weightSum="4">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/winner"
                app:tint="@color/dark_green"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="15sp"
                android:fontFamily="@font/arial_rounded"
                android:textColor="@color/black"
                android:text="Man of the tournement"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/manOfTheTournement"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="147"
                android:textSize="20sp"
                android:fontFamily="@font/arial_rounded"
                android:textColor="@color/black"
                android:layout_weight="1"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        android:layout_margin="5dp"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial_rounded"
                android:text="Total"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="20dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/gamePlayed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/arial_rounded"
                        android:text="122"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_marginTop="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded"
                        android:text="Games"
                        android:textColor="@color/dark_green"
                        android:textSize="13sp" />
                </LinearLayout>
                <View
                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:background="@color/dark_green"
                    android:layout_gravity="center"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/xp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/arial_rounded"
                        android:text="40"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_marginTop="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded"
                        android:text="XP"
                        android:textColor="@color/dark_green"
                        android:textSize="13sp" />
                </LinearLayout>
                <View
                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:background="@color/dark_green"
                    android:layout_gravity="center"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/score"
                        android:fontFamily="@font/arial_rounded"
                        android:text="48%"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_marginTop="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded"
                        android:text="Score"
                        android:textColor="@color/dark_green"
                        android:textSize="13sp" />
                </LinearLayout>
          
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/dark_green"
                android:layout_marginVertical="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/goals"
                        android:fontFamily="@font/arial_rounded"
                        android:text="14"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_marginTop="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded"
                        android:text="Goals"
                        android:textColor="@color/dark_green"
                        android:textSize="13sp" />
                </LinearLayout>
                <View
                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:background="@color/dark_green"
                    android:layout_gravity="center"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/redCards"
                        android:fontFamily="@font/arial_rounded"
                        android:text="53"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_marginTop="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded"
                        android:text="Red Cards"
                        android:textColor="@color/dark_green"
                        android:textSize="13sp" />
                </LinearLayout>
                <View
                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:background="@color/dark_green"
                    android:layout_gravity="center"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/yellowCards"
                        android:fontFamily="@font/arial_rounded"
                        android:text="122"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_marginTop="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded"
                        android:text="Yellow Cards"
                        android:textColor="@color/dark_green"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/dark_green"
                android:layout_marginVertical="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"

            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/votes"
                    android:fontFamily="@font/arial_rounded"
                    android:text="140"
                    android:textColor="@color/black"
                    android:textSize="23sp" />
                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_rounded"
                    android:text="Votes"
                    android:textColor="@color/dark_green"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial_rounded"
            android:text="Skills"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <ImageButton
            android:id="@+id/skillsType"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="changeSkillsDisplay"
            android:scaleType="centerCrop"
            android:tint="@drawable/label_bg"
            android:src="@drawable/ic_baseline_workspaces_24"
            android:background="#00000000"/>
    </LinearLayout>


        <com.ultramegasoft.radarchart.RadarView
            android:id="@+id/radar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/skillsRecyclerView"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>