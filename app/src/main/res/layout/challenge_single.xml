<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="134dp"
        android:layout_height="130dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="5dp"
        android:elevation="10dp">
    <LinearLayout
        android:id="@+id/backgroundImageChallenge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/challenge_rapid"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/text_holder"
    >
        <TextView
            android:id="@+id/challengeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial_rounded"
            android:gravity="center"
            android:text="#Rapid"
            android:textColor="#FFF"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/typeTournement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial_rounded"
            android:gravity="center"
            android:text="Amateur"
            android:textColor="#FFF"
            android:textSize="13sp" />

    <TextView
        android:id="@+id/numberOfTeams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial_rounded"
        android:gravity="center"
        android:text="6 teams"
        android:textColor="#FFF"
        android:textSize="11sp" />
</LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>