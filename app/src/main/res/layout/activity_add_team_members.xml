<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".AddTeamMembersActivity">
    <EditText
        android:id="@+id/search_bar_invitation"
        android:layout_width="302dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rounded_edittext"
        android:elevation="10dp"
        android:fontFamily="@font/arial_rounded"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:hint="Search"
        android:paddingLeft="15dp"
        android:textSize="14dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_weight="8"
        android:id="@+id/inviteTeamMembers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gradian_btn"
        android:fontFamily="@font/arial_rounded"
        android:layout_gravity="center"
        android:text="Invite"
        android:onClick="invite"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:textSize="23sp"
        android:textStyle="bold" />
</LinearLayout>